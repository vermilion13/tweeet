<div class="container">

    <header class="header clearfix">
        <%= image_tag('z_logo.png') %>
        <p>Rails入門シリーズ</p>
    </header>

    <nav class="navi clearfix">
        <ul>
            <li><%= link_to 'TOPページ', 'top' %></li>
            <li><%= link_to '呟き一覧', tweeets_path %></li>
            <li><%= link_to '新しく呟く', new_tweeet_path %></li>
        </ul>
    </nav>

    <div class="main clearfix">
        <article class="content">
            <section>
                <h1>以下の内容でよろしいですか？</h1>
                  <%= form_with(model: @tweeet, url: tweeets_path, local: true) do |form| %>
                  <%= form.hidden_field :content %>
                  <p>内容:<%= @tweeet.content %></p>
                  <%= form.submit  "登録する" %>
                  <% end %>

                  <%= form_with(model: @tweeet, url: new_tweeet_path, local: true, method: 'get') do |form| %>
                  <%= form.hidden_field :content %>
                  <%= form.submit "もどる", name: 'back' %>
                  <% end %>
            </section>
        </article>
    </div>

    <footer class="footer">
        <p>Copyright c 2018 千田 玄 for fullstack NTTコムチェオ1月期</p>
    </footer>
</div>